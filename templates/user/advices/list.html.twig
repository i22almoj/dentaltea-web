{% extends 'base.html.twig' %}

{% block title %}Consejos{% endblock %}

{% block body %}
    <div id="advicesList">

   
        <h2 class="d-inline-block">Consejos</h2>
    
                
        <div class="accordion" id="advicesAccordion">
        {% for advice in list %}    
            <div class="accordion-item">
                <h2 class="accordion-header" id="heading-{{advice.id}}">
                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseAdvice{{advice.id}}" aria-expanded="true" aria-controls="collapse-{{advice.id}}">
                        {% if advice.image %}<img src="{{ app.request.getSchemeAndHttpHost() }}/{{advice.image}}" width="80" alt="{{advice.title}}" />{% endif %}
                        {{advice.title}}
                    </button>
                </h2>
                <div id="collapseAdvice{{advice.id}}" class="accordion-collapse collapse" aria-labelledby="heading-{{advice.id}}">
                    <div class="accordion-body">
                        
                        {{advice.content | raw}}
                    </div>
                </div>
            </div>
        {% endfor %}
            
        </div>
            
    </div>
        



{% endblock %}
