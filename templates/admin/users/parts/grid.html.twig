<div class="list-grid">
    <div class="row">
        {% for user in users %}
        
        <div class="list-grid-item col-12 col-xs-12 col-sm-6 col-md-6 col-lg-4 col-xl-3">
            <a href="{{ app.request.getSchemeAndHttpHost() }}/admin/usuarios/editar/{{user.id}}"><h2 class="item-description">{{user.name}}</h2></a>
            <a href="{{ app.request.getSchemeAndHttpHost() }}/admin/usuarios/editar/{{user.id}}"  class="pb-2 d-block">({% if user.role == 'ROLE_USER' %}Usuario común{% elseif user.role == 'ROLE_ADMIN' %}<strong>Administrador</strong>{% endif %})</a>
            <a href="{{ app.request.getSchemeAndHttpHost() }}/admin/usuarios/editar/{{user.id}}" class="settings" title="Editar" data-toggle="tooltip"><i class="material-icons">&#xE8B8;</i></a> &nbsp; 
            <a onclick="return confirm('¿Seguro que quieres eliminarlo?');" href="{{ app.request.getSchemeAndHttpHost() }}/admin/usuarios/eliminar/{{user.id}}" class="delete" title="Eliminar" data-toggle="tooltip"><i class="material-icons">&#xE5C9;</i></a>            
        </div>

        {% endfor %}
        {% if users|length == 0 %}
            <p class="no-results" >No se encontraron elementos</p>
        {% endif %}
    </div>
</div>